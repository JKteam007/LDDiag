<?xml version="1.0" encoding="utf-8"?>
<configuration>
  
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <appender name="Native" type="log4net.Appender.RollingFileAppender">
      <file value="lddiag.native.log" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <datePattern value=".yyyyMMdd" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-6level %logger - %message %exception%newline" />
      </layout>
    </appender>

    <appender name="Managed" type="log4net.Appender.RollingFileAppender">
      <file value="lddiag.managed.log" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <datePattern value=".yyyyMMdd" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="5MB" />
      <staticLogFileName value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-6level %logger - %message %exception%newline" />
      </layout>
    </appender>


    <logger name="Native">
      <level value="ALL" />
      <appender-ref ref="Native" />
    </logger>

    <logger name="MainWindow" additivity="false">
      <level value="ALL" />
      <appender-ref ref="Managed" />
    </logger>

    <logger name="DatamartChecker" additivity="false">
      <level value="ALL" />
      <appender-ref ref="Managed" />
    </logger>

    <logger name="InventoryChecker" additivity="false">
      <level value="ALL" />
      <appender-ref ref="Managed" />
    </logger>

    <logger name="ConfigChecker" additivity="false">
      <level value="ALL" />
      <appender-ref ref="Managed" />
    </logger>

    <logger name="Util" additivity="false">
      <level value="ALL" />
      <appender-ref ref="Managed" />
    </logger>

    <root>
      <level value="OFF" />
      <appender-ref ref="" />
    </root>
  </log4net>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2"/>
  </startup>
</configuration>
